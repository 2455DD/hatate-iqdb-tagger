<Window x:Class="Hatate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hatate"
        mc:Ignorable="d"
        Title="Hatate - iqdb images tagger" Height="318.015" Width="525" MinWidth="500" MinHeight="186">
	<Grid>
		<ListBox x:Name="ListBox_Files" Margin="0,18,191,90" SelectionChanged="ListBox_Files_SelectionChanged" ContextMenuOpening="ListBox_Files_ContextMenuOpening"/>
		<Label x:Name="Label_Remaining" Content="Remaining" Height="26" VerticalAlignment="Bottom" Margin="0,0,75,64"/>
		<Label x:Name="Label_Results" Content="Results" Height="26" VerticalAlignment="Bottom" Margin="0,0,75,33"/>
		<Button x:Name="Button_Start" Content="Start" Click="Button_Start_Click" Height="57" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" IsEnabled="False" Background="#FF3CB21A" Foreground="White" BorderBrush="{x:Null}" FontSize="20" Margin="0,0,0,33"/>
		<Menu Height="18" VerticalAlignment="Top">
			<MenuItem x:Name="MenuItem_OpenFolder" Header="Open folder" Click="MenuItem_OpenFolder_Click"/>
			<MenuItem x:Name="MenuItem_ShowFolder" Header="Show folder" Click="MenuItem_ShowFolder_Click"/>
			<MenuItem x:Name="MenuItem_Refresh" Header="Refresh list" Click="MenuItem_Refresh_Click" Height="18"/>
			<MenuItem Header="Reload known tags" Click="MenuItem_ReloadKnownTags_Click"/>
			<MenuItem Header="Options" Click="MenuItem_Options_Click"/>
		</Menu>
		<StatusBar Height="32" VerticalAlignment="Bottom">
			<Label x:Name="Label_Status" Content="Status"/>
		</StatusBar>
		<ListBox x:Name="ListBox_Tags" Margin="0,97,0,90" HorizontalAlignment="Right" Width="191"/>
		<Border BorderBrush="Black" BorderThickness="1" Height="74" Margin="0,18,101,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="90">
			<Image x:Name="Image_Original" Height="100" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Border>
		<Border BorderBrush="Black" BorderThickness="1" Height="75" Margin="0,17,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="90">
			<Image x:Name="Image_Match" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Border>
	</Grid>
</Window>
