<Window x:Class="Hatate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hatate"
        mc:Ignorable="d"
        Title="Hatate - iqdb images tagger" Height="475" Width="610" MinWidth="610" MinHeight="475">
	<Grid>
		<ListBox x:Name="ListBox_Files" Margin="0,18,236,95" SelectionChanged="ListBox_Files_SelectionChanged" ContextMenuOpening="ListBox_Files_ContextMenuOpening" SelectionMode="Extended" Drop="ListBox_Files_Drop" DragEnter="ListBox_Files_DragEnter" AllowDrop="True"/>
		<Label x:Name="Label_Remaining" Content="Remaining" Height="26" VerticalAlignment="Bottom" Margin="0,0,75,64"/>
		<Label x:Name="Label_Results" Content="Results" Height="26" VerticalAlignment="Bottom" Margin="0,0,75,33"/>
		<Button x:Name="Button_Start" Content="Start" Click="Button_Start_Click" Height="57" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" IsEnabled="False" Background="#FF3CB21A" Foreground="White" BorderBrush="{x:Null}" FontSize="20" Margin="0,0,0,33"/>
		<Menu Height="18" VerticalAlignment="Top">
			<MenuItem Header="Files" Height="18" >
				<MenuItem x:Name="MenuItem_AddFiles" Header="Add files" Click="MenuItem_AddFiles_Click"/>
				<MenuItem x:Name="MenuItem_AddFolder" Header="Add folder" Click="MenuItem_AddFolder_Click"/>
				<MenuItem x:Name="MenuItem_OpenAppFolder" Header="Open app folder" Click="MenuItem_OpenAppFolder_Click"/>
				<MenuItem Header="Reload known tags" Click="MenuItem_ReloadKnownTags_Click"/>
			</MenuItem>
			<MenuItem Header="Maintenance" Height="18" >
				<MenuItem Header="Delete thumbnails" Click="MenuItem_DeleteThumbs_Click"/>
				<MenuItem Header="Remove known tags duplicates" Click="MenuItem_RemoveDuplicates_Click"/>
			</MenuItem>
			<MenuItem Header="Options" Click="MenuItem_Options_Click" Height="18" />
		</Menu>
		<StatusBar Height="32" VerticalAlignment="Bottom">
			<Label x:Name="Label_Status" Content="Status"/>
		</StatusBar>
		<Border BorderBrush="Black" BorderThickness="1" Height="74" Margin="0,18,118,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="113">
			<Image x:Name="Image_Original" Height="100" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Border>
		<Border BorderBrush="Black" BorderThickness="1" Height="74" Margin="0,18,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="113">
			<Image x:Name="Image_Match" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Border>
		<Button x:Name="Button_Apply" Content="Apply" Margin="0,0,0,95" Click="Button_Apply_Click" HorizontalAlignment="Right" Width="231" Height="19" VerticalAlignment="Bottom" IsEnabled="False"/>
		<Label Content="Original" Margin="0,23,121,0" VerticalAlignment="Top" Height="69" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Right" Width="110">
			<Label.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-34.574"/>
					<TranslateTransform/>
				</TransformGroup>
			</Label.RenderTransform>
		</Label>
		<Label x:Name="Label_Match" Content="Match" Margin="0,17,0,0" VerticalAlignment="Top" Height="75" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Right" Width="110">
			<Label.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-30.345"/>
					<TranslateTransform/>
				</TransformGroup>
			</Label.RenderTransform>
		</Label>
		<Grid Margin="0,97,0,119" HorizontalAlignment="Right" Width="231">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="5" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<ListBox x:Name="ListBox_Tags" HorizontalAlignment="Right" Width="231" Margin="0,0,0,5"/>
			<GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" />
			<ListBox x:Name="ListBox_UnknownTags" HorizontalAlignment="Right" Width="231" SelectionMode="Extended" Grid.Row="2" Margin="0,5,0,0"/>
		</Grid>
	</Grid>
</Window>
