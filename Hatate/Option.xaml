<Window x:Class="Hatate.Option"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hatate"
        mc:Ignorable="d"
        Title="Option" Height="206.473" Width="325.301" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
	<Grid>
		<CheckBox x:Name="CheckBox_Compare" Content="Compare with found result before writing tags" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<Button Content="Save" HorizontalAlignment="Left" Width="309" Click="Button_Save_Click" Height="29" VerticalAlignment="Bottom"/>
		<CheckBox x:Name="CheckBox_KnownTags" Content="Keep only known tags" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
		<Slider x:Name="Slider_Similarity" HorizontalAlignment="Left" Margin="170,104,0,0" VerticalAlignment="Top" Width="139" ValueChanged="Slider_Similarity_ValueChanged" SmallChange="1" Maximum="100" Value="90"/>
		<Label x:Name="Label_Similarity" Content="Minimum similarity (90%)" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top"/>
		<ComboBox x:Name="Combo_MatchType" HorizontalAlignment="Left" Margin="170,48,0,0" VerticalAlignment="Top" Width="139" />
		<Label x:Name="Label_MatchType" Content="Match type" HorizontalAlignment="Left" Margin="25,46,0,0" VerticalAlignment="Top" Width="134"/>
		<Label Content="Minimum number of tags" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="155"/>
		<TextBox x:Name="TextBox_MinimumTagsCount" HorizontalAlignment="Left" Height="20" Margin="170,75,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="139" VerticalContentAlignment="Center"/>
		<CheckBox x:Name="CheckBox_MatchType" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Click="CheckBox_MatchType_Click"/>
	</Grid>
</Window>
