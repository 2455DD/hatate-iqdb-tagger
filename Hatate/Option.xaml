<Window x:Class="Hatate.Option"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hatate"
        mc:Ignorable="d"
        Title="Options" Height="315.5" Width="608" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
	<Grid Background="{DynamicResource WindowBackground}">
		<Button Content="Save" HorizontalAlignment="Left" Width="595" Click="Button_Save_Click" Height="29" VerticalAlignment="Bottom"/>
		<CheckBox x:Name="CheckBox_KnownTags" Content="Keep only known tags" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<CheckBox x:Name="CheckBox_AddRating" Content="Add rating to tags" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
		<Slider x:Name="Slider_Similarity" HorizontalAlignment="Left" Margin="170,103,0,0" VerticalAlignment="Top" Width="139" ValueChanged="Sliders_ValueChanged" SmallChange="1" Maximum="100" Value="90"/>
		<Label x:Name="Label_Similarity" Content="Minimum similarity (90%):" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top"/>
		<ComboBox x:Name="Combo_MatchType" HorizontalAlignment="Left" Margin="170,48,0,0" VerticalAlignment="Top" Width="139" />
		<Label x:Name="Label_MatchType" Content="Minimum match type:" HorizontalAlignment="Left" Margin="25,46,0,0" VerticalAlignment="Top" Width="134"/>
		<Label Content="Minimum number of tags:" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Width="155"/>
		<TextBox x:Name="TextBox_MinimumTagsCount" HorizontalAlignment="Left" Height="20" Margin="170,75,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="139" VerticalContentAlignment="Center"/>
		<CheckBox x:Name="CheckBox_MatchType" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Click="CheckBox_MatchType_Click"/>
		<Label x:Name="Label_Delay" Content="Delay (600secs / 10mins):" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top"/>
		<Slider x:Name="Slider_Delay" HorizontalAlignment="Left" Margin="170,127,0,0" VerticalAlignment="Top" Width="139" ValueChanged="Sliders_ValueChanged" SmallChange="1" Maximum="600" Value="60"/>
		<GroupBox Header="Sources" HorizontalAlignment="Left" Height="230" Margin="314,10,0,0" VerticalAlignment="Top" Width="268">
			<Grid>
				<CheckBox x:Name="CheckBox_Source_Danbooru" Content="Danbooru" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
				<CheckBox x:Name="CheckBox_Source_Konachan" Content="Konachan" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
				<CheckBox x:Name="CheckBox_Source_Yandere" Content="Yandere" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
				<CheckBox x:Name="CheckBox_Source_Gelbooru" Content="Gelbooru" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
				<CheckBox x:Name="CheckBox_Source_SankakuChannel" Content="SankakuChannel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0"/>
				<CheckBox x:Name="CheckBox_Source_Eshuushuu" Content="Eshuushuu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,30,0,0"/>
				<CheckBox x:Name="CheckBox_Source_TheAnimeGallery" Content="TheAnimeGallery" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"/>
				<CheckBox x:Name="CheckBox_Source_Zerochan" Content="Zerochan" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
				<CheckBox x:Name="CheckBox_Source_AnimePictures" Content="AnimePictures" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0"/>
			</Grid>
		</GroupBox>
		<CheckBox x:Name="CheckBox_Randomize" Content="Randomize the delay (30~90 secs / 0.5~1.5 mins)" HorizontalAlignment="Left" Margin="10,154,0,0" VerticalAlignment="Top"/>
		<CheckBox x:Name="CheckBox_AutoMove" Content="Automatically move files when no user action is needed" HorizontalAlignment="Left" Margin="10,172,0,0" VerticalAlignment="Top" Height="14"/>
		<CheckBox x:Name="CheckBox_AskTags" Content="Ask for tags when adding files to the list" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top"/>
		<CheckBox x:Name="CheckBox_ParseBooru" Content="Parse booru page when possible (longer)" HorizontalAlignment="Left" Margin="10,209,0,0" VerticalAlignment="Top"/>
		<CheckBox x:Name="CheckBox_RenameMd5" Content="Always rename moved files using MD5" HorizontalAlignment="Left" Margin="10,227,0,0" VerticalAlignment="Top"/>
	</Grid>
</Window>
