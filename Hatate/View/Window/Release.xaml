<Window x:Class="Hatate.Release"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hatate"
        mc:Ignorable="d"
        Title="New release available" Height="258" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
	<Grid Background="{DynamicResource WindowBackground}">
		<Label Content="A new release is available to download on GitHub." Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="289"/>
		<Label x:Name="Label_Release" Content="release" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="289" FontSize="11"/>
		<WebBrowser x:Name="WebBrowser_Changelog" Margin="0,71,0,0" />
		<Button Content="Open download page" HorizontalAlignment="Right" Width="120" RenderTransformOrigin="0.227,0.467" Height="25" Margin="0,41,68,0" VerticalAlignment="Top" Click="Button_Open_Click"/>
		<Button Content="Close" Margin="0,41,10,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="53" Click="Button_Close_Click"/>
	</Grid>
</Window>
